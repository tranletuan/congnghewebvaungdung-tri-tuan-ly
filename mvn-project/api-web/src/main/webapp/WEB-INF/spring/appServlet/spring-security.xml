<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">
           
    <http pattern="/**/login" security="none" />
    <http pattern="/**/media/**" security="none"/>
    <http auto-config='true' use-expressions="true">
        <!--config ROLE_VIEW-->
        <intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" />
        <form-login login-page='/admin/login' login-processing-url="/admin/j_spring_security_check"  default-target-url='/admin/home/'
                    always-use-default-target='true' authentication-failure-url="/admin/noAccess" />
        <session-management  invalid-session-url="/admin/invalidSession" /> 
        <logout logout-url="/admin/logout" invalidate-session="true" logout-success-url="/admin/login"/>
    </http>
    <!--    <beans:bean id="accessDeniedHandler" 
                class="me.report.api.web.controller.admin.MyAccessDeniedHandler">
        <beans:property name="accessDeniedUrl" value="403" />
    </beans:bean>-->
    <beans:bean class="org.springframework.security.authentication.encoding.Md5PasswordEncoder"   id="passwordEncoder"/>
    <authentication-manager >
        <authentication-provider >
            <jdbc-user-service data-source-ref="dataSourceAuthority" 
                               users-by-username-query="select username,password, enabled from users where username=?" 
                               authorities-by-username-query="select u.username, ur.authority from users u, user_roles ur where u.user_id = ur.user_id and u.username=?" />
            <password-encoder ref="passwordEncoder" />
            <user-service >
                <user name="admin" password="21232f297a57a5a743894a0e4a801fc3" authorities="ROLE_ADMIN,ROLE_VIEW,ROLE_EDIT" />
                <user name="view" password="21232f297a57a5a743894a0e4a801fc3" authorities="ROLE_VIEW" />
                <user name="editer" password="21232f297a57a5a743894a0e4a801fc3" authorities="ROLE_VIEW, ROLE_EDIT" />
            </user-service>
	       
        </authentication-provider>
    </authentication-manager>
   
</beans:beans>